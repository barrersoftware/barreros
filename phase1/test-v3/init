#!/bin/sh

# BarrerOS Phase 1 Init
# Minimal init that launches C# code

mount -t proc none /proc
mount -t sysfs none /sys
mount -t devtmpfs none /dev

echo ""
echo "üè¥‚Äç‚ò†Ô∏è BarrerOS Phase 1 Initializing..."
echo ""

# Set library path for .NET
export LD_LIBRARY_PATH=/lib:/lib64:/lib/x86_64-linux-gnu:/dotnet

# Launch C# init
exec /dotnet/BarrerInit
